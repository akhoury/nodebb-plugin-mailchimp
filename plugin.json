{
	"id": "nodebb-plugin-mailchimp",
	"name": "MailChimp Hook",
	"description": "A MailChimp hook for NodeBB",
	"url": "https://github.com/akhoury/nodebb-plugin-mailchimp",
	"library": "./index.js",
	"staticDir": "./public",
	"css": [
		"css/default.css"
	],
	"hooks": [
		{ "hook": "action:user.create", "method": "listSubscribe", "priority": 5 },
		{ "hook": "filter:admin.header.build", "method": "admin.menu", "callbacked": false },
		{ "hook": "filter:admin.create_routes", "method": "admin.route", "callbacked": true },
		{ "hook": "action:plugin.activate", "method": "admin.activate" },
		{ "hook": "action:config.set", "method": "reload" }
	]
}